<% layout("/layouts/boilerplate.ejs") %>
<div class="row my-4">
    <div class="col-8 offset-2">
        <h3>Edit Listing</h3>
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter a title.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                <div class="invalid-feedback">
                    Please enter a short description.
                </div>
            </div>

            <div>
                Original Image<br>
                <img src="<%=originalUrl%>" alt="image">
            </div>

            <div class="mb-3 mt-3">
                <label class="form-label" for="image">Upload New Image</label>
                <input type="file" name="listing[image]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">Price</label>
                    <input type="number" name="listing[price]" placeholder="enter price" value="<%=listing.price%>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="country">Country</label>
                    <input type="text" name="listing[country]" placeholder="enter country" value="<%=listing.country%>" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter the country.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter a valid location.
                </div>
            </div>
           
            <div class="mb-3">
                <div class="mb-2">Amenities</div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="trending">
                    <label class="form-check-label" for="inlineCheckbox1">Trending</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="rooms">
                    <label class="form-check-label" for="inlineCheckbox1">Rooms</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="arctic">
                    <label class="form-check-label" for="inlineCheckbox1">Arctic</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="camping">
                    <label class="form-check-label" for="inlineCheckbox1">Camping</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="mountains">
                    <label class="form-check-label" for="inlineCheckbox1">Mountains</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="boats">
                    <label class="form-check-label" for="inlineCheckbox1">Boats</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="farms">
                    <label class="form-check-label" for="inlineCheckbox1">Farm</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="pools">
                    <label class="form-check-label" for="inlineCheckbox1">Pool</label>
                </div>
                <div class="form-check form-check-inline me-5">
                    <input class="form-check-input" name="listing[category]" type="checkbox" id="inlineCheckbox1" value="castles">
                    <label class="form-check-label" for="inlineCheckbox1">Castle</label>
                </div>
            </div> 
            <button class="btn btn-dark myred-btn mt-3">Edit</button>
        </form>
    </div>
</div>
<script>
    const listing = <%-JSON.stringify(listing)%>;
    let checkboxes = document.querySelectorAll(".form-check-input");
    for(checkbox of checkboxes){
        if(listing.category.includes(checkbox.value)){
            checkbox.checked = true;
        }
    }
</script>